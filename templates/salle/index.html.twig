{% extends 'base.html.twig' %}

{% block title %}Liste des Salles{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .pagination-container {
            display: flex;
            justify-content: center;
            margin: 20px 0;
        }
        .pagination {
            display: flex;
            list-style: none;
            padding: 0;
        }
        .pagination-item {
            display: inline-block;
            padding: 8px 16px;
            margin: 0 4px;
            border: 1px solid #ddd;
            text-decoration: none;
            color: #333;
            border-radius: 4px;
        }
        .pagination-item:hover {
            background-color: #f5f5f5;
        }
        .pagination-item.active {
            background-color: #007bff;
            color: white;
            border-color: #007bff;
        }
        .pagination-prev, .pagination-next {
            font-weight: bold;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Liste des Salles</h1>
        <div>
            <a href="{{ path('app_salle_export_pdf') }}" class="btn btn-secondary me-2">
                <i class="fas fa-file-pdf"></i> Exporter en PDF
            </a>
            <a href="{{ path('app_salle_new') }}" class="btn btn-primary">
                <i class="fas fa-plus"></i> Ajouter une salle
            </a>
        </div>
    </div>

    <div class="card mb-4">
        <div class="card-body">
            <form method="get" class="row g-3">
                <div class="col-md-4">
                    <input type="text" name="search" class="form-control" placeholder="Rechercher par nom, capacité ou description..." value="{{ app.request.query.get('search') }}">
                </div>
                <div class="col-md-2">
                    <button type="submit" class="btn btn-primary w-100">Rechercher</button>
                </div>
            </form>
        </div>
    </div>

    <div class="table-responsive">
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nom</th>
                    <th>Capacité</th>
                    <th>Email</th>
                    <th>Description</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            {% for salle in pagination %}
                <tr>
                    <td>{{ salle.id }}</td>
                    <td>{{ salle.nom }}</td>
                    <td>{{ salle.capacite }}</td>
                    <td>{{ salle.email }}</td>
                    <td>{{ salle.description }}</td>
                    <td>
                        <div class="btn-group">
                            <a href="{{ path('app_salle_show', {'id': salle.id}) }}" class="btn btn-sm btn-info">Voir</a>
                            <a href="{{ path('app_salle_edit', {'id': salle.id}) }}" class="btn btn-sm btn-warning">Modifier</a>
                        </div>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">Aucune salle trouvée</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="navigation mt-4">
        {{ include('pagination.html.twig', {pagination: pagination, show_pagination: show_pagination}) }}
    </div>
{% endblock %} 