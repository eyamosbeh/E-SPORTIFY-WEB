{% extends 'base.html.twig' %}

{% block title %}Liste des Réponses{% endblock %}

{% block body %}
<div class="container py-4">
    <nav aria-label="breadcrumb" class="mb-4">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('app_reclamation_index') }}">Réclamations</a></li>
            <li class="breadcrumb-item active" aria-current="page">Réponses</li>
        </ol>
    </nav>

    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="h2">Liste des Réponses</h1>
        <a href="{{ path('app_reponse_new') }}" class="btn btn-primary">
            <i class="fas fa-plus me-1"></i> Nouvelle Réponse
        </a>
    </div>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="card shadow-sm">
        <div class="card-header bg-light">
            <div class="d-flex justify-content-between align-items-center">
                <h3 class="h5 mb-0">
                    <i class="fas fa-comments me-2"></i> Toutes les réponses
                </h3>
                <span class="badge bg-primary">{{ reponses|length }} réponse(s)</span>
            </div>
        </div>
        <div class="card-body">
            {% if reponses|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th>ID</th>
                                <th>Réclamation</th>
                                <th>Contenu</th>
                                <th>Date de création</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                        {% for reponse in reponses %}
                            <tr>
                                <td>{{ reponse.id }}</td>
                                <td>
                                    {% if reponse.reclamation %}
                                        <a href="{{ path('app_reclamation_show', {'id': reponse.reclamation.id}) }}" class="badge bg-info text-decoration-none">
                                            #{{ reponse.reclamation.id }}
                                        </a>
                                        <span class="d-block small text-muted mt-1">
                                            {{ reponse.reclamation.description|u.truncate(30, '...') }}
                                        </span>
                                    {% else %}
                                        <span class="badge bg-secondary">N/A</span>
                                    {% endif %}
                                </td>
                                <td>{{ reponse.contenu|u.truncate(50, '...') }}</td>
                                <td>{{ reponse.date_creation ? reponse.date_creation|date('d/m/Y H:i') : '' }}</td>
                                <td>
                                    <div class="btn-group btn-group-sm" role="group">
                                        <a href="{{ path('app_reponse_show', {'id': reponse.id}) }}" class="btn btn-outline-info" title="Voir les détails">
                                            <i class="fas fa-eye"></i>
                                        </a>
                                        <a href="{{ path('app_reponse_edit', {'id': reponse.id}) }}" class="btn btn-outline-warning" title="Modifier">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <button type="button" class="btn btn-outline-danger" title="Supprimer" 
                                                data-bs-toggle="modal" data-bs-target="#deleteModal{{ reponse.id }}">
                                            <i class="fas fa-trash-alt"></i>
                                        </button>
                                    </div>
                                    
                                    <!-- Modal de confirmation de suppression -->
                                    <div class="modal fade" id="deleteModal{{ reponse.id }}" tabindex="-1" aria-hidden="true">
                                        <div class="modal-dialog">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <h5 class="modal-title">Confirmation de suppression</h5>
                                                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                </div>
                                                <div class="modal-body">
                                                    <p>Êtes-vous sûr de vouloir supprimer cette réponse ?</p>
                                                    <div class="alert alert-warning">
                                                        <small>Cette action est irréversible.</small>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                    <form method="post" action="{{ path('app_reponse_delete', {'id': reponse.id}) }}">
                                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
                                                        <button type="submit" class="btn btn-danger">Confirmer</button>
                                                    </form>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        {% endfor %}
                        </tbody>
                    </table>
                </div>
            {% else %}
                <div class="alert alert-info text-center p-5">
                    <i class="fas fa-info-circle fa-3x mb-3"></i>
                    <h4>Aucune réponse trouvée</h4>
                    <p>Commencez par créer une nouvelle réponse ou répondre à une réclamation existante.</p>
                    <div class="mt-3">
                        <a href="{{ path('app_reponse_new') }}" class="btn btn-primary me-2">
                            <i class="fas fa-plus me-1"></i> Créer une réponse
                        </a>
                        <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-clipboard-list me-1"></i> Voir les réclamations
                        </a>
                    </div>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %} 