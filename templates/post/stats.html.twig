        </ul>
    </aside>

    <!-- MAIN CONTENT -->
    <main class="main-content">
        <div class="container">
            <h1>Vlog Posts Statistics</h1>

            <a href="{{ path('app_post_indexback') }}" class="back-btn">
                <i class="fas fa-arrow-left"></i> Back to Posts
            </a>

            <!-- Pie Chart: Posts by Category -->
            <div class="dashboard-card">
                <h2 style="font-size: 1.5rem; margin-bottom: 1rem;">Posts by Category</h2>
                <div class="chart-container">
                    <canvas id="postsByCategoryChart"></canvas>
                </div>
            </div>

            <!-- Bar Chart: Comments per Post -->
            <div class="dashboard-card">
                <h2 style="font-size: 1.5rem; margin-bottom: 1rem;">Comments per Post (Top 10)</h2>
                <div class="chart-container">
                    <canvas id="commentsPerPostChart"></canvas>
                </div>
            </div>

            <!-- Line Chart: Posts Over Time -->
            <div class="dashboard-card">
                <h2 style="font-size: 1.5rem; margin-bottom: 1rem;">Posts Over Time</h2>
                <div class="chart-container">
                    <canvas id="postsOverTimeChart"></canvas>
                </div>
            </div>

            <!-- Pie Chart: Signaled vs Non-Signaled Posts -->
            <div class="dashboard-card">
                <h2 style="font-size: 1.5rem; margin-bottom: 1rem;">Signaled vs Non-Signaled Posts</h2>
                <div class="chart-container">
                    <canvas id="signaledPostsChart"></canvas>
                </div>
            </div>

            <!-- Bar Chart: Most Liked Posts -->
            <div class="dashboard-card">
                <h2 style="font-size: 1.5rem; margin-bottom: 1rem;">Most Liked Posts (Top 10)</h2>
                <div class="chart-container">
                    <canvas id="mostLikedPostsChart"></canvas>
                </div>
            </div>

            <!-- Bar Chart: Most Disliked Posts -->
            <div class="dashboard-card">
                <h2 style="font-size: 1.5rem; margin-bottom: 1rem;">Most Disliked Posts (Top 10)</h2>
                <div class="chart-container">
                    <canvas id="mostDislikedPostsChart"></canvas>
                </div>
            </div>
        </div>
    </main>
</div>

<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/js/all.min.js"></script>
<script>
    document.addEventListener('DOMContentLoaded', () => {
        // Define color palette
        const colors = [
            '#FF6384', '#36A2EB', '#FFCE56', '#4BC0C0', '#9966FF',
            '#FF9F40', '#C9CBCF', '#7BC225', '#FF6B6B', '#FFD700'
        ];

        // Pie Chart: Posts by Category
        const postsByCategoryData = {
            labels: [{% for item in postsByCategory %}'{{ item.category }}'{% if not loop.last %},{% endif %}{% endfor %}],
            datasets: [{
                data: [{% for item in postsByCategory %}{{ item.count }}{% if not loop.last %},{% endif %}{% endfor %}],
                backgroundColor: colors,
                hoverOffset: 4
            }]
        };

        new Chart(document.getElementById('postsByCategoryChart'), {
            type: 'pie',
            data: postsByCategoryData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            font: {
                                family: 'Poppins',
                                size: 14
                            }
                        }
                    },
                    title: {
                        display: true,
                        text: 'Distribution of Posts by Category',
                        font: {
                            family: 'Poppins',
                            size: 16,
                            weight: 'bold'
                        },
                        padding: {
                            top: 10,
                            bottom: 30
                        }
                    }
                }
            }
        });

        // Bar Chart: Comments per Post
        const commentsPerPostData = {
            labels: [{% for item in commentsPerPost %}'{{ item.postTitle|length > 20 ? item.postTitle|slice(0, 20) ~ '...' : item.postTitle }}'{% if not loop.last %},{% endif %}{% endfor %}],
            datasets: [{
                label: 'Number of Comments',
                data: [{% for item in commentsPerPost %}{{ item.commentCount }}{% if not loop.last %},{% endif %}{% endfor %}],
                backgroundColor: '#36A2EB',
                borderColor: '#1d4ed8',
                borderWidth: 1
            }]
        };

        new Chart(document.getElementById('commentsPerPostChart'), {
            type: 'bar',
            data: commentsPerPostData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Number of Comments',
                            font: {
                                family: 'Poppins',
                                size: 14
                            }
                        },
                        ticks: {
                            stepSize: 1,
                            font: {
                                family: 'Poppins'
                            }
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Post Title',
                            font: {
                                family: 'Poppins',
                                size: 14
                            }
                        },
                        ticks: {
                            font: {
                                family: 'Poppins'
                            },
                            maxRotation: 45,
                            minRotation: 45
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    title: {
                        display: true,
                        text: 'Comments per Post (Top 10)',
                        font: {
                            family: 'Poppins',
                            size: 16,
                            weight: 'bold'
                        },
                        padding: {
                            top: 10,
                            bottom: 30
                        }
                    }
                }
            }
        });

        // Line Chart: Posts Over Time
        const postsOverTimeData = {
            labels: [{% for item in postsOverTime %}'{{ item.month }}'{% if not loop.last %},{% endif %}{% endfor %}],
            datasets: [{
                label: 'Number of Posts',
                data: [{% for item in postsOverTime %}{{ item.count }}{% if not loop.last %},{% endif %}{% endfor %}],
                fill: false,
                borderColor: '#FF6384',
                tension: 0.1,
                pointBackgroundColor: '#FF6384',
                pointBorderColor: '#fff',
                pointHoverBackgroundColor: '#fff',
                pointHoverBorderColor: '#FF6384'
            }]
        };

        new Chart(document.getElementById('postsOverTimeChart'), {
            type: 'line',
            data: postsOverTimeData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Number of Posts',
                            font: {
                                family: 'Poppins',
                                size: 14
                            }
                        },
                        ticks: {
                            stepSize: 1,
                            font: {
                                family: 'Poppins'
                            }
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Month',
                            font: {
                                family: 'Poppins',
                                size: 14
                            }
                        },
                        ticks: {
                            font: {
                                family: 'Poppins'
                            }
                        }
                    }
                },
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            font: {
                                family: 'Poppins',
                                size: 14
                            }
                        }
                    },
                    title: {
                        display: true,
                        text: 'Posts Created Over Time',
                        font: {
                            family: 'Poppins',
                            size: 16,
                            weight: 'bold'
                        },
                        padding: {
                            top: 10,
                            bottom: 30
                        }
                    }
                }
            }
        });

        // Pie Chart: Signaled vs Non-Signaled Posts
        const signaledPostsData = {
            labels: [{% for item in signaledPostsCount %}'{{ item.signaled ? "Signaled" : "Non-Signaled" }}'{% if not loop.last %},{% endif %}{% endfor %}],
            datasets: [{
                data: [{% for item in signaledPostsCount %}{{ item.count }}{% if not loop.last %},{% endif %}{% endfor %}],
                backgroundColor: ['#FF6384', '#36A2EB'],
                hoverOffset: 4
            }]
        };

        new Chart(document.getElementById('signaledPostsChart'), {
            type: 'pie',
            data: signaledPostsData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                plugins: {
                    legend: {
                        position: 'top',
                        labels: {
                            font: {
                                family: 'Poppins',
                                size: 14
                            }
                        }
                    },
                    title: {
                        display: true,
                        text: 'Signaled vs Non-Signaled Posts',
                        font: {
                            family: 'Poppins',
                            size: 16,
                            weight: 'bold'
                        },
                        padding: {
                            top: 10,
                            bottom: 30
                        }
                    }
                }
            }
        });

        // Bar Chart: Most Liked Posts
        const mostLikedPostsData = {
            labels: [{% for item in mostLikedPosts %}'{{ item.postTitle|length > 20 ? item.postTitle|slice(0, 20) ~ '...' : item.postTitle }}'{% if not loop.last %},{% endif %}{% endfor %}],
            datasets: [{
                label: 'Number of Likes',
                data: [{% for item in mostLikedPosts %}{{ item.likeCount }}{% if not loop.last %},{% endif %}{% endfor %}],
                backgroundColor: '#10b981',
                borderColor: '#059669',
                borderWidth: 1
            }]
        };

        new Chart(document.getElementById('mostLikedPostsChart'), {
            type: 'bar',
            data: mostLikedPostsData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Number of Likes',
                            font: {
                                family: 'Poppins',
                                size: 14
                            }
                        },
                        ticks: {
                            stepSize: 1,
                            font: {
                                family: 'Poppins'
                            }
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Post Title',
                            font: {
                                family: 'Poppins',
                                size: 14
                            }
                        },
                        ticks: {
                            font: {
                                family: 'Poppins'
                            },
                            maxRotation: 45,
                            minRotation: 45
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    title: {
                        display: true,
                        text: 'Most Liked Posts (Top 10)',
                        font: {
                            family: 'Poppins',
                            size: 16,
                            weight: 'bold'
                        },
                        padding: {
                            top: 10,
                            bottom: 30
                        }
                    }
                }
            }
        });

        // Bar Chart: Most Disliked Posts
        const mostDislikedPostsData = {
            labels: [{% for item in mostDislikedPosts %}'{{ item.postTitle|length > 20 ? item.postTitle|slice(0, 20) ~ '...' : item.postTitle }}'{% if not loop.last %},{% endif %}{% endfor %}],
            datasets: [{
                label: 'Number of Dislikes',
                data: [{% for item in mostDislikedPosts %}{{ item.dislikeCount }}{% if not loop.last %},{% endif %}{% endfor %}],
                backgroundColor: '#ef4444',
                borderColor: '#dc2626',
                borderWidth: 1
            }]
        };

        new Chart(document.getElementById('mostDislikedPostsChart'), {
            type: 'bar',
            data: mostDislikedPostsData,
            options: {
                responsive: true,
                maintainAspectRatio: false,
                scales: {
                    y: {
                        beginAtZero: true,
                        title: {
                            display: true,
                            text: 'Number of Dislikes',
                            font: {
                                family: 'Poppins',
                                size: 14
                            }
                        },
                        ticks: {
                            stepSize: 1,
                            font: {
                                family: 'Poppins'
                            }
                        }
                    },
                    x: {
                        title: {
                            display: true,
                            text: 'Post Title',
                            font: {
                                family: 'Poppins',
                                size: 14
                            }
                        },
                        ticks: {
                            font: {
                                family: 'Poppins'
                            },
                            maxRotation: 45,
                            minRotation: 45
                        }
                    }
                },
                plugins: {
                    legend: {
                        display: false
                    },
                    title: {
                        display: true,
                        text: 'Most Disliked Posts (Top 10)',
                        font: {
                            family: 'Poppins',
                            size: 16,
                            weight: 'bold'
                        },
                        padding: {
                            top: 10,
                            bottom: 30
                        }
                    }
                }
            }
        });
    });
</script>
{% endblock %}