{% extends 'reclamation/index.html.twig' %}

{% block title %}Détail de la Réclamation{% endblock %}

{% block body %}
<style>body, .container, .content, .main-content { background: #fff !important; }</style>
{% include 'Navbar/navbar_login.html.twig' %}

<div class="container animate-fade-in">
    

    {% for message in app.flashes('success') %}
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            {{ message }}
            <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
        </div>
    {% endfor %}

    <div class="row">
        <div class="col-md-8">
            <div class="card mb-4">
                <div class="card-header">
                    <div class="d-flex align-items-center mb-2">
                        <i class="fas fa-file-alt me-2"></i>
                        <p class="section-subtitle mb-0">
                            {% if reclamation.categorie %}
                                {{ reclamation.categorie }}
                            {% else %}
                                Détail
                            {% endif %}
                        </p>
                    </div>
                    <h2 class="title h3 mb-0">Réclamation <span style="color: var(--text-purple);">#{{ reclamation.id }}</span></h2>
                </div>
                <div class="card-body">
                    <div class="mb-4">
                        <h5 class="text-white fw-bold">Description</h5>
                        <div class="p-3 bg-dark-purple rounded">
                            {{ reclamation.description|nl2br }}
                        </div>
                    </div>

                    <div class="row mb-4">
                        <div class="col-md-6">
                            <h5 class="text-white fw-bold">Statut</h5>
                            <span class="status-badge {{ reclamation.statut|lower|replace({' ': '-'}) }}">
                                {{ reclamation.statut }}
                            </span>
                            {% if reclamation.archived %}
                                <span class="badge bg-secondary ms-2">Archivée</span>
                            {% endif %}
                        </div>
                        <div class="col-md-6">
                            <h5 class="text-white fw-bold">Date de création</h5>
                            <p>
                                <i class="far fa-calendar-alt me-2"></i>
                                {{ reclamation.date_creation ? reclamation.date_creation|date('d/m/Y H:i') : 'N/A' }}
                            </p>
                        </div>
                    </div>

                    {% if reclamation.image_path %}
                        <div class="mb-4">
                            <h5 class="text-white fw-bold">Image jointe</h5>
                            <div class="mt-2">
                                <img src="{{ asset('uploads/images/' ~ reclamation.image_path) }}" 
                                     class="img-fluid img-thumbnail" style="max-height: 300px;" alt="Image jointe">
                                <div class="mt-2">
                                    <a href="{{ asset('uploads/images/' ~ reclamation.image_path) }}" 
                                       class="btn btn-sm btn-outline-info" target="_blank">
                                        <i class="fas fa-search-plus me-1"></i> Voir en plein écran
                                    </a>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    {% if reclamation.pdf_path %}
                        <div class="mb-4">
                            <h5 class="text-white fw-bold">Document PDF</h5>
                            <div class="d-flex align-items-center mt-2">
                                <i class="fas fa-file-pdf text-danger fa-2x me-3"></i>
                                <div>
                                    <p class="mb-1">{{ reclamation.pdf_path }}</p>
                                    <div>
                                        <a href="{{ asset('uploads/pdf/' ~ reclamation.pdf_path) }}" 
                                           class="btn btn-sm btn-outline-danger me-2" target="_blank">
                                            <i class="fas fa-eye me-1"></i> Consulter
                                        </a>
                                        <a href="{{ path('app_reclamation_pdf', {'id': reclamation.id}) }}" 
                                           class="btn btn-sm btn-outline-secondary" target="_blank">
                                            <i class="fas fa-download me-1"></i> Télécharger
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    {% endif %}

                    <!-- Section des réponses -->
                    <div class="mt-5">
                        <h5 class="text-white fw-bold border-bottom pb-2">
                            <i class="fas fa-comments me-2"></i> Réponses
                            <span class="badge bg-purple ms-2">{{ reclamation.reponses|length }}</span>
                        </h5>
                        
                        {% if reclamation.reponses|length > 0 %}
                            {% for reponse in reclamation.reponses %}
                                <div class="card mb-3 bg-oxford-blue">
                                    <div class="card-body">
                                        <div class="d-flex justify-content-between align-items-center mb-2">
                                            <span class="text-champagne-pink">
                                                <i class="fas fa-user-circle me-1"></i> Réponse #{{ reponse.id }}
                                            </span>
                                            <span class="text-white small">
                                                <i class="far fa-clock me-1"></i> {{ reponse.date_creation|date('d/m/Y H:i') }}
                                            </span>
                                        </div>
                                        <p class="mb-2">{{ reponse.contenu|nl2br }}</p>
                                        <div class="d-flex justify-content-end mt-2">
                                            <a href="{{ path('app_reponse_show', {'id': reponse.id}) }}" class="btn btn-sm btn-outline-info me-2">
                                                <i class="fas fa-eye me-1"></i> Voir
                                            </a>
                                            <form method="post" action="{{ path('app_reponse_delete', {'id': reponse.id}) }}" onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cette réponse?');">
                                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reponse.id) }}">
                                                <button type="submit" class="btn btn-sm btn-outline-danger">
                                                    <i class="fas fa-trash me-1"></i> Supprimer
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            {% endfor %}
                        {% else %}
                            <div class="alert bg-oxford-blue text-center py-4 mt-3">
                                <i class="fas fa-comment-slash fa-2x mb-3" style="color: var(--text-champagne-pink);"></i>
                                <p class="text-white">Aucune réponse pour cette réclamation.</p>
                            </div>
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card mb-4">
                <div class="card-header">
                    <h3 class="h5 mb-0">Actions</h3>
                </div>
                <div class="card-body">
                    <div class="d-grid gap-2">
                        <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-warning">
                            <i class="fas fa-edit me-2"></i> Modifier
                        </a>
                        
                        {% if not reclamation.archived %}
                            <button type="button" class="btn btn-secondary" data-bs-toggle="modal" data-bs-target="#archiveModal">
                                <i class="fas fa-archive me-2"></i> Archiver
                            </button>
                        {% else %}
                            <button type="button" class="btn btn-success" data-bs-toggle="modal" data-bs-target="#unarchiveModal">
                                <i class="fas fa-box-open me-2"></i> Restaurer
                            </button>
                        {% endif %}
                        
                        <button type="button" class="btn btn-danger" data-bs-toggle="modal" data-bs-target="#deleteModal">
                            <i class="fas fa-trash me-2"></i> Supprimer
                        </button>
                        
                        <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-secondary">
                            <i class="fas fa-arrow-left me-2"></i> Retour à la liste
                        </a>
                    </div>
                </div>
            </div>
            
            <div class="card">
                <div class="card-header">
                    <h3 class="h5 mb-0">Informations</h3>
                </div>
                <div class="card-body">
                    <ul class="list-group list-group-flush bg-transparent">
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span class="text-white">ID:</span>
                            <span class="fw-bold">{{ reclamation.id }}</span>
                        </li>
                        {% if reclamation.utilisateur %}
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span class="text-white">Utilisateur:</span>
                            <span class="fw-bold">{{ reclamation.utilisateur }}</span>
                        </li>
                        {% endif %}
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span class="text-white">Date:</span>
                            <span class="fw-bold">{{ reclamation.date_creation|date('d/m/Y') }}</span>
                        </li>
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span class="text-white">Statut:</span>
                            <span class="fw-bold status-badge {{ reclamation.statut|lower|replace({' ': '-'}) }}">{{ reclamation.statut }}</span>
                        </li>
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span class="text-white">Réponses:</span>
                            <span class="fw-bold">{{ reclamation.reponses|length }}</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- Modal Archive -->
<div class="modal fade" id="archiveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation d'archivage</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir archiver cette réclamation ?</p>
                <p class="text-white">Une réclamation archivée n'apparaîtra plus dans la liste principale.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('app_reclamation_archive', {'id': reclamation.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ reclamation.id) }}">
                    <button type="submit" class="btn btn-primary">Archiver</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Unarchive -->
<div class="modal fade" id="unarchiveModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Confirmation de restauration</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <p>Êtes-vous sûr de vouloir restaurer cette réclamation ?</p>
                <p class="text-white">La réclamation sera à nouveau visible dans la liste principale.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('app_reclamation_unarchive', {'id': reclamation.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('unarchive' ~ reclamation.id) }}">
                    <button type="submit" class="btn btn-success">Restaurer</button>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Modal Delete -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header modal-danger">
                <h5 class="modal-title">Confirmation de suppression</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="alert alert-deletion-warning">
                    <i class="fas fa-exclamation-triangle me-2"></i>
                    <strong>Attention :</strong> Cette action est irréversible.
                </div>
                <p class="text-white">Êtes-vous sûr de vouloir supprimer définitivement cette réclamation ?</p>
                <p class="text-white">Toutes les réponses associées seront également supprimées.</p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                <form method="post" action="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                    <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %} 