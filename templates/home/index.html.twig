{% block javascripts %}
    {{ parent() }}
    <script type="module" src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.esm.js"></script>
    <script nomodule src="https://unpkg.com/ionicons@5.5.2/dist/ionicons/ionicons.js"></script>
    <script>
        'use strict';

        /**
         * add event on element
         */
        const addEventOnElement = function (elem, type, callback) {
            if (elem.length > 1) {
                for (let i = 0; i < elem.length; i++) {
                    elem[i].addEventListener(type, callback);
                }
            } else {
                elem.addEventListener(type, callback);
            }
        }

        /**
         * header active
         */
        const header = document.querySelector("[data-header]");
        const backTopBtn = document.querySelector("[data-back-top-btn]");

        window.addEventListener("scroll", function () {
            if (window.scrollY > 100) {
                header.classList.add("active");
                backTopBtn.classList.add("active");
            } else {
                header.classList.remove("active");
                backTopBtn.classList.remove("active");
            }
        });

        /**
         * button hover ripple effect
         */
        const buttons = document.querySelectorAll("[data-btn]");

        const buttonHoverRipple = function (event) {
            this.style.setProperty("--top", `${event.offsetY}px`);
            this.style.setProperty("--left", `${event.offsetX}px`);
        }

        addEventOnElement(buttons, "mousemove", buttonHoverRipple);

        /**
         * scroll reveal
         */
        const revealElements = document.querySelectorAll("[data-reveal]");

        const revealElementOnScroll = function () {
            for (let i = 0; i < revealElements.length; i++) {
                const isElementInsideWindow = revealElements[i].getBoundingClientRect().top < window.innerHeight / 1.1;

                if (isElementInsideWindow) {
                    revealElements[i].classList.add("revealed");
                }
            }
        }

        window.addEventListener("scroll", revealElementOnScroll);

        window.addEventListener("load", revealElementOnScroll);

        /**
         * custom cursor
         */
        const cursor = document.querySelector("[data-cursor]");

        const anchorElements = document.querySelectorAll("a");
        const buttonElements = document.querySelectorAll("button");

        document.body.addEventListener("mousemove", function (event) {
            setTimeout(function () {
                cursor.style.top = `${event.clientY}px`;
                cursor.style.left = `${event.clientX}px`;
            }, 100);
        });

        const cursorEnterHandler = function () {
            cursor.classList.add("hovered");
        }

        const cursorLeaveHandler = function () {
            cursor.classList.remove("hovered");
        }

        addEventOnElement(anchorElements, "mouseenter", cursorEnterHandler);
        addEventOnElement(anchorElements, "mouseleave", cursorLeaveHandler);
        addEventOnElement(buttonElements, "mouseenter", cursorEnterHandler);
        addEventOnElement(buttonElements, "mouseleave", cursorLeaveHandler);

        document.body.addEventListener("mousedown", function () {
            cursor.classList.add("active");
        });

        document.body.addEventListener("mouseup", function () {
            cursor.classList.remove("active");
        });
    </script>
