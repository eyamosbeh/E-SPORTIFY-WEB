{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css" rel="stylesheet">
    <link href='https://unpkg.com/boxicons@2.0.9/css/boxicons.min.css' rel='stylesheet'>
    <link rel="stylesheet" href="{{ asset('dashboard/style.css') }}">
    <style>
        .form-title {
            font-size: 2rem;
            font-weight: bold;
            margin-bottom: 0.5rem;
        }
        .form-separator {
            border-bottom: 3px solid #20c9a6;
            margin-bottom: 2rem;
            width: 100%;
        }
        .form-label {
            font-weight: 500;
        }
        .form-control {
            border-radius: 6px;
            font-size: 1.1rem;
        }
        .form-section {
            background: #fff;
            border-radius: 16px;
            box-shadow: 0 4px 24px rgba(0,0,0,0.07);
            padding: 2.5rem 2rem;
            max-width: 800px;
            margin: 2rem auto;
        }
    </style>
{% endblock %}

{% block body %}
<!-- SIDEBAR -->
<section id="sidebar">
    <a href="#" class="brand">
        <img src="{{ asset('navbar/img/E-SPORTIFY.png') }}" alt="E-SPORTIFY" style="width: 180px; height: auto; margin-left: 10px;">
    </a>
    <ul class="side-menu top">
        <li>
            <a href="{{ path('app_dashboard_admin') }}">
                <i class='bx bxs-dashboard'></i>
                <span class="text">Dashboard</span>
            </a>
        </li>
        <li class="active">
            <a href="{{ path('admin_boutique') }}">
                <i class='bx bxs-shopping-bag-alt'></i>
                <span class="text">Mon Boutique</span>
            </a>
        </li>
        <li>
            <a href="#">
                <i class='bx bxs-doughnut-chart'></i>
                <span class="text">Analytics</span>
            </a>
        </li>
        <li>
            <a href="{{ path('app_admin_dashboard') }}">
                <i class='bx bxs-message-dots'></i>
                <span class="text">Message</span>
            </a>
        </li>
        <li>
            <a href="#">
                <i class='bx bxs-group'></i>
                <span class="text">Team</span>
            </a>
        </li>
    </ul>
    <ul class="side-menu">
        <li>
            <a href="#">
                <i class='bx bxs-cog'></i>
                <span class="text">Settings</span>
            </a>
        </li>
        <li>
            <a href="{{ path('app_logout') }}" class="logout">
                <i class='bx bxs-log-out-circle'></i>
                <span class="text">Logout</span>
            </a>
        </li>
    </ul>
</section>
<!-- SIDEBAR -->

<!-- CONTENT -->
<section id="content">
    <main>
        <div class="form-section">
            <div class="form-title">{{ is_edit ? 'Modifier le produit' : 'Ajouter un nouveau produit' }}</div>
            <div class="form-separator"></div>
            {{ form_start(form, {'attr': {'enctype': 'multipart/form-data'}}) }}
                <div class="mb-3">
                    {{ form_label(form.nom, 'Nom du produit', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.nom, {'attr': {'class': 'form-control', 'placeholder': 'Nom du produit'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.description, 'Description', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Description du produit'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.prix, 'Prix €', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.prix, {'attr': {'class': 'form-control', 'placeholder': 'Prix'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.stock, 'Stock', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.stock, {'attr': {'class': 'form-control', 'placeholder': 'Quantité en stock'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.categorie, 'Catégorie', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.categorie, {'attr': {'class': 'form-control'}}) }}
                </div>
                <div class="mb-3">
                    {{ form_label(form.image, 'Image du produit', {'label_attr': {'class': 'form-label'}}) }}
                    {{ form_widget(form.image, {'attr': {'class': 'form-control'}}) }}
                    <small class="form-text text-muted">Formats acceptés : JPG, PNG. Taille maximale : 2Mo</small>
                </div>
                <div class="mt-4">
                    <button type="submit" class="btn btn-success px-4">{{ is_edit ? 'Enregistrer' : 'Ajouter' }}</button>
                    <a href="{{ path('admin_boutique', {'section': 'produits'}) }}" class="btn btn-secondary px-4 ms-2">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </main>
</section>
<!-- CONTENT -->
{% endblock %} 