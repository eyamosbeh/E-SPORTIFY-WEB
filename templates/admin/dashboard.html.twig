{% extends 'base.html.twig' %}

{% block title %}Tableau de bord - Administration{% endblock %}

{% block body %}
<div class="container py-4">
    <h1 class="mb-4">
        <i class="fas fa-tachometer-alt me-2"></i> Tableau de bord administrateur
    </h1>
    
    <!-- Statistiques récapitulatives -->
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card bg-primary text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Total</h6>
                            <h2 class="card-text">{{ stats.total }}</h2>
                        </div>
                        <i class="fas fa-clipboard-list fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_reclamation_index') }}" class="text-white text-decoration-none">
                        <small><i class="fas fa-arrow-right me-1"></i> Voir toutes les réclamations</small>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card bg-warning text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">En attente</h6>
                            <h2 class="card-text">{{ stats.enAttente }}</h2>
                        </div>
                        <i class="fas fa-clock fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="#pending-claims" class="text-white text-decoration-none">
                        <small><i class="fas fa-arrow-right me-1"></i> Voir les réclamations en attente</small>
                    </a>
                </div>
            </div>
        </div>
        
        <div class="col-md-4">
            <div class="card bg-success text-white">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <div>
                            <h6 class="card-title">Résolues</h6>
                            <h2 class="card-text">{{ stats.resolues }}</h2>
                        </div>
                        <i class="fas fa-check-circle fa-3x opacity-50"></i>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="{{ path('app_admin_reclamations_resolues') }}" class="text-white text-decoration-none">
                        <small><i class="fas fa-arrow-right me-1"></i> Voir les réclamations résolues</small>
                    </a>
                </div>
            </div>
        </div>
    </div>
    
    <!-- Reste du contenu -->
    <div class="row">
        <!-- Réclamations en attente -->
        <div class="col-md-8">
            <div class="card shadow-sm mb-4" id="pending-claims">
                <div class="card-header bg-warning text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-exclamation-circle me-1"></i> Réclamations en attente de réponse
                        <span class="badge bg-light text-dark">{{ pendingReclamations|length }}</span>
                    </h5>
                </div>
                <div class="card-body p-0">
                    {% if pendingReclamations|length > 0 %}
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Description</th>
                                        <th>Date</th>
                                        <th>Catégorie</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    {% for reclamation in pendingReclamations %}
                                        <tr>
                                            <td>#{{ reclamation.id }}</td>
                                            <td>{{ reclamation.description|length > 50 ? reclamation.description|slice(0, 50) ~ '...' : reclamation.description }}</td>
                                            <td>{{ reclamation.date_creation|date('d/m/Y H:i') }}</td>
                                            <td>{{ reclamation.categorie ? reclamation.categorie : 'Non catégorisée' }}</td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-outline-secondary">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="{{ path('app_admin_reponse', {'id': reclamation.id}) }}" class="btn btn-outline-success">
                                                        <i class="fas fa-reply"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    {% endfor %}
                                </tbody>
                            </table>
                        </div>
                    {% else %}
                        <div class="alert alert-success m-3">
                            <i class="fas fa-check-circle me-1"></i> Aucune réclamation en attente. Bon travail !
                        </div>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <!-- Réclamations récentes -->
        <div class="col-md-4">
            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="fas fa-clock me-1"></i> Dernières réclamations
                    </h5>
                </div>
                <div class="card-body p-0">
                    <div class="list-group list-group-flush">
                        {% for reclamation in latestReclamations %}
                            <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="list-group-item list-group-item-action">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1">Réclamation #{{ reclamation.id }}</h6>
                                    <small class="text-muted">{{ reclamation.date_creation|date('d/m/Y') }}</small>
                                </div>
                                <p class="mb-1 text-truncate">{{ reclamation.description }}</p>
                                <small class="d-flex justify-content-between">
                                    <span class="badge {{ reclamation.statut|lower|replace({' ': '-'}) }}">{{ reclamation.statut }}</span>
                                    {% if reclamation.categorie %}
                                        <span class="badge bg-info">{{ reclamation.categorie }}</span>
                                    {% endif %}
                                </small>
                            </a>
                        {% else %}
                            <div class="list-group-item">
                                <p class="mb-0">Aucune réclamation récente</p>
                            </div>
                        {% endfor %}
                    </div>
                </div>
                <div class="card-footer text-center">
                    <a href="{{ path('app_reclamation_index') }}" class="btn btn-sm btn-outline-primary">
                        <i class="fas fa-list me-1"></i> Voir toutes les réclamations
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .card {
            transition: transform 0.3s;
        }
        
        .card:hover {
            transform: translateY(-5px);
        }
        
        .opacity-50 {
            opacity: 0.5;
        }
        
        .en-attente {
            background-color: #f39c12;
            color: white;
        }
        
        .résolue, .resolue {
            background-color: #2ecc71;
            color: white;
        }
        
        .card-footer {
            background-color: rgba(0, 0, 0, 0.1);
            border-top: none;
        }
    </style>
{% endblock %} 