{% extends 'basee.html.twig' %}

{% block title %}Liste des Réclamations{% endblock %}

{% block stylesheets %}
{{ parent() }}
<style>
    body { background: linear-gradient(120deg, #2193b0 0%, #6dd5ed 100%) !important; }
    .card {
        background: linear-gradient(90deg, #2193b0 0%, #6dd5ed 100%);
        border: none;
        border-radius: 18px;
        box-shadow: 0 4px 18px rgba(45, 171, 202, 0.27);
        color: #fff;
    }
    .card .card-body h3, .card .card-body p { color: #fff; }
    .card-header { background: transparent; border: none; }
    .table-responsive { border-radius: 18px; overflow: hidden; box-shadow: 0 2px 12px rgba(33,147,176,0.08); }
    .table {
        background: #fff;
        color: #222;
        border-radius: 18px;
        overflow: hidden;
        margin-bottom: 0;
    }
    .table thead {
        background: linear-gradient(90deg, #2193b0 0%, #6dd5ed 100%);
        color: #fff;
        font-weight: 600;
    }
    .table th, .table td { vertical-align: middle; }
    .table tbody tr:hover { background: #f3f9fb; }
    .status-badge {
        display: inline-block;
        padding: 0.35em 1.1em;
        border-radius: 18px;
        font-size: 0.95em;
        font-weight: 600;
        color: #fff;
        background: #2193b0;
        letter-spacing: 0.5px;
        box-shadow: 0 2px 8px rgba(33,147,176,0.07);
    }
    .status-badge.en-attente { background: #ffb347; }
    .status-badge.résolue { background: #43cea2; }
    .status-badge.archivée { background: #b0b0b0; }
    .btn, .btn-outline-primary, .btn-outline-info, .btn-outline-warning, .btn-outline-danger, .btn-outline-success {
        border-radius: 22px !important;
        font-weight: 600;
        padding: 0.4em 1.3em;
        box-shadow: 0 2px 8px rgba(33,147,176,0.07);
        border: none;
        color: #fff !important;
        background: linear-gradient(90deg, #2193b0 0%, #6dd5ed 100%);
        transition: background 0.2s, box-shadow 0.2s;
    }
    .btn:hover, .btn-outline-primary:hover, .btn-outline-info:hover, .btn-outline-warning:hover, .btn-outline-danger:hover, .btn-outline-success:hover {
        background: linear-gradient(90deg, #6dd5ed 0%, #2193b0 100%);
        color: #fff !important;
        box-shadow: 0 4px 16px rgba(33,147,176,0.13);
    }
    .btn-group .btn { margin-right: 0.4em; }
    .btn-group .btn:last-child { margin-right: 0; }
    .search-container { margin-bottom: 20px; }
    .search-input {
        color: #000000 !important; /* Texte en noir */
        width: 100%;
        padding: 10px 15px 10px 40px;
        border-radius: 22px;
        border: 1px rgb(0, 2, 2);
        background:rgb(0, 2, 2);
        color: #222;
        font-size: 1em;
        transition: border 0.2s;
    }
    .search-input:focus { border: 1.5px solid #2193b0; outline: none; background: #fff;  color: #000000 !important; /* Texte en noir */}
    .search-icon { left: 15px; color: #2193b0; }
    .no-results {
        text-align: center;
        padding: 20px;
        color: #2193b0;
        background:rgb(1, 12, 16);
        border-radius: 12px;
    }

    .card {
        background-color: rgba(26, 13, 33, 0.9) !important;
        border: 1px solid rgba(255, 255, 255, 0.1);
    }
    .table {
        color: #fff;
    }
    body {
        background-color: #1A0D21;
    }
    .btn-outline-primary {
        color: #fff;
        border-color: var(--text-purple);
    }
    .btn-outline-primary:hover {
        background-color: var(--text-purple);
        border-color: var(--text-purple);
    }
    .search-container {
        position: relative;
        margin-bottom: 20px;
    }
    .search-input {
        color: #000000 !important; /* Texte en noir */
        width: 100%;
        padding: 10px 15px;
        padding-left: 40px;
        background-color: rgb(255, 255, 255);
        border: 1px solid rgba(123, 163, 227, 0.99);
        border-radius: 5px;
        color: #fff;
        transition: all 0.3s ease;
    }
    .search-input:focus {
        color: #000000 !important; /* Texte en noir */
        background-color: rgb(255, 255, 255);
        border-color: var(--text-purple);
        box-shadow: 0 0 0 0.2rem rgba(var(--text-purple-rgb), 0.25);
        outline: none;
    }
    .search-input::placeholder {
        color: rgba(13, 0, 0, 0.93);
    }
    .search-icon {
        position: absolute;
        left: 12px;
        top: 50%;
        transform: translateY(-50%);
        color: rgba(14, 0, 0, 0);
    }
    .no-results {
        text-align: center;
        padding: 20px;
        color: #fff;
        background-color: rgba(255, 255, 255, 0.1);
        border-radius: 5px;
        margin-top: 20px;
        display: none;
    }
</style>
{% endblock %}

{% block body %}
<style>body, .container, .content, .main-content { background: #fff !important; }</style>
{% include 'Navbar/navbar_login.html.twig' %}

<div class="container py-4" style="background-color: #1A0D21;">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="h2 title text-white"><span style="color: var(--text-purple);">Liste des Réclamations</span></h1>
        </div>
        <a href="{{ path('app_reclamation_new') }}" class="btn">
            <i class="fas fa-plus-circle me-2"></i> Nouvelle Réclamation
        </a>
    </div>

    <!-- Ajout du champ de recherche -->
    <div class="search-container">
        <i class="fas fa-search search-icon"></i>
        <input type="text" id="searchInput" class="search-input" placeholder="Rechercher une réclamation...">
    </div>

    <div class="row mb-4">
        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="h4 mb-2 text-white">{{ reclamations|length }}</h3>
                    <p class="mb-0 text-white">Réclamations totale</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="h4 mb-2 text-white">{{ reclamations|filter(r => r.statut == 'En attente')|length }}</h3>
                    <p class="mb-0 text-white">En attente</p>
                </div>
            </div>
        </div>

        <div class="col-md-4 mb-3">
            <div class="card">
                <div class="card-body text-center">
                    <h3 class="h4 mb-2 text-white">{{ reclamations|filter(r => r.statut == 'Résolue')|length }}</h3>
                    <p class="mb-0 text-white">Résolues</p>
                </div>
            </div>
        </div>
    </div>

    <div class="card">
        <div class="card-header d-flex justify-content-between align-items-center">
            <h2 class="h5 mb-0 text-white">
                <i class="fas fa-clipboard-list me-2"></i> 
                {% if app.request.query.get('archived') %}
                    Réclamations archivées
                {% else %}
                    Réclamations actives
                {% endif %}
            </h2>
            <div>
                {% if app.request.query.get('archived') %}
                    <a href="{{ path('app_reclamation_index') }}" class="btn btn-outline-primary">
                        <i class="fas fa-clipboard-list me-1"></i> Voir les actives
                    </a>
                {% else %}
                    <a href="{{ path('app_reclamation_index', {'archived': 'true'}) }}" class="btn btn-outline-primary">
                        <i class="fas fa-archive me-1"></i> Voir les archives
                    </a>
                {% endif %}
            </div>
        </div>
        <div class="card-body">
            {% if reclamations|length > 0 %}
                <div class="table-responsive">
                    <table class="table table-hover" id="reclamationsTable">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Description</th>
                                <th>Statut</th>
                                <th>Date de création</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            {% for reclamation in reclamations %}
                                <tr class="reclamation-row">
                                    <td>{{ reclamation.id }}</td>
                                    <td class="description-cell">
                                        <div class="d-flex align-items-center">
                                            <div class="flex-grow-1">{{ reclamation.description|slice(0, 50) ~ (reclamation.description|length > 50 ? '...' : '') }}</div>
                                            <button class="btn btn-sm btn-outline-info ms-2 translate-btn" data-text="{{ reclamation.description }}" data-target-lang="en" title="Translate to English">
                                                <i class="fas fa-language"></i>
                                            </button>
                                        </div>
                                    </td>
                                    <td>
                                        <span class="status-badge {{ reclamation.statut|lower|replace({' ': '-'}) }}">
                                            {{ reclamation.statut }}
                                        </span>
                                    </td>
                                    <td>{{ reclamation.date_creation ? reclamation.date_creation|date('d/m/Y H:i') : '' }}</td>
                                    <td>
                                        <div class="btn-group">
                                            <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-sm btn-outline-info">
                                                <i class="fas fa-eye"></i>
                                            </a>
                                            <a href="{{ path('app_reclamation_edit', {'id': reclamation.id}) }}" class="btn btn-sm btn-outline-warning">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            {% if not reclamation.archived %}
                                                <button type="button" class="btn btn-sm btn-outline-secondary" data-bs-toggle="modal" data-bs-target="#archiveModal{{ reclamation.id }}">
                                                    <i class="fas fa-archive"></i>
                                                </button>
                                            {% else %}
                                                <button type="button" class="btn btn-sm btn-outline-success" data-bs-toggle="modal" data-bs-target="#unarchiveModal{{ reclamation.id }}">
                                                    <i class="fas fa-box-open"></i>
                                                </button>
                                            {% endif %}
                                            <button type="button" class="btn btn-sm btn-outline-danger" data-bs-toggle="modal" data-bs-target="#deleteModal{{ reclamation.id }}">
                                                <i class="fas fa-trash"></i>
                                            </button>
                                        </div>

                                        <!-- Modal Archive -->
                                        <div class="modal fade" id="archiveModal{{ reclamation.id }}" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirmation d'archivage</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Êtes-vous sûr de vouloir archiver cette réclamation ?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                        <form method="post" action="{{ path('app_reclamation_archive', {'id': reclamation.id}) }}">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('archive' ~ reclamation.id) }}">
                                                            <button type="submit" class="btn btn-primary">Archiver</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Modal Unarchive -->
                                        <div class="modal fade" id="unarchiveModal{{ reclamation.id }}" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header">
                                                        <h5 class="modal-title">Confirmation de restauration</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <p>Êtes-vous sûr de vouloir restaurer cette réclamation ?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                        <form method="post" action="{{ path('app_reclamation_unarchive', {'id': reclamation.id}) }}">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('unarchive' ~ reclamation.id) }}">
                                                            <button type="submit" class="btn btn-success">Restaurer</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>

                                        <!-- Modal Delete -->
                                        <div class="modal fade" id="deleteModal{{ reclamation.id }}" tabindex="-1" aria-hidden="true">
                                            <div class="modal-dialog">
                                                <div class="modal-content">
                                                    <div class="modal-header modal-danger">
                                                        <h5 class="modal-title">Confirmation de suppression</h5>
                                                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                    </div>
                                                    <div class="modal-body">
                                                        <div class="alert alert-deletion-warning">
                                                            <i class="fas fa-exclamation-triangle me-2"></i>
                                                            <strong>Attention :</strong> Cette action est irréversible.
                                                        </div>
                                                        <p>Êtes-vous sûr de vouloir supprimer définitivement cette réclamation ?</p>
                                                    </div>
                                                    <div class="modal-footer">
                                                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                                                        <form method="post" action="{{ path('app_reclamation_delete', {'id': reclamation.id}) }}">
                                                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ reclamation.id) }}">
                                                            <button type="submit" class="btn btn-danger">Confirmer la suppression</button>
                                                        </form>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                <div class="no-results">
                    <i class="fas fa-search fa-2x mb-3"></i>
                    <h4>Aucun résultat trouvé</h4>
                    <p>Essayez de modifier vos critères de recherche</p>
                </div>
            {% else %}
                <div class="text-center py-5">
                    <i class="fas fa-clipboard fa-3x mb-3" style="color: var(--text-champagne-pink);"></i>
                    <h3 class="h4">Aucune réclamation trouvée</h3>
                    <p>Commencez par créer votre première réclamation</p>
                    <a href="{{ path('app_reclamation_new') }}" class="btn mt-3">
                        <i class="fas fa-plus-circle me-2"></i> Nouvelle Réclamation
                    </a>
                </div>
            {% endif %}
        </div>
    </div>
</div>
{% endblock %}

{% block javascripts %}
{{ parent() }}
<script>
async function translateText(text, targetLang) {
    const sourceLang = targetLang === 'en' ? 'fr' : 'en';
    try {
        const response = await fetch(`https://api.mymemory.translated.net/get?q=${encodeURIComponent(text)}&langpair=${sourceLang}|${targetLang}`);
        const data = await response.json();
        if (data.responseStatus === 200 && data.responseData.translatedText) {
            return data.responseData.translatedText;
        } else {
            throw new Error(data.responseDetails || 'Erreur de traduction');
        }
    } catch (error) {
        console.error('Erreur de traduction:', error);
        throw error;
    }
}


async function translateText(text, targetLang) {
    const sourceLang = targetLang === 'en' ? 'fr' : 'en';
    try {
        const response = await fetch(`https://api.mymemory.translated.net/get?q=${encodeURIComponent(text)}&langpair=${sourceLang}|${targetLang}`);
        const data = await response.json();
        if (data.responseStatus === 200 && data.responseData.translatedText) {
            return data.responseData.translatedText;
        } else {
            throw new Error(data.responseDetails || 'Erreur de traduction');
        }
    } catch (error) {
        console.error('Erreur de traduction:', error);
        throw error;
    }
}


document.addEventListener('DOMContentLoaded', function() {
    // Gestion des boutons de traduction
    document.querySelectorAll('.translate-btn').forEach(btn => {
        btn.addEventListener('click', async function() {
            const text = this.dataset.text;
            const targetLang = this.dataset.targetLang;
            const descriptionDiv = this.closest('.d-flex').querySelector('.flex-grow-1');
            
            try {
                const translatedText = await translateText(text, targetLang);
                const originalText = descriptionDiv.textContent;
                descriptionDiv.textContent = translatedText;
                
                // Toggle le bouton pour permettre de revenir au texte original
                this.dataset.text = translatedText;
                this.dataset.targetLang = targetLang === 'en' ? 'fr' : 'en';
                this.title = targetLang === 'en' ? 'Traduire en français' : 'Translate to English';
            } catch (error) {
                alert('Erreur lors de la traduction : ' + error.message);
            }
        });
    });

    const searchInput = document.getElementById('searchInput');
    const table = document.getElementById('reclamationsTable');
    const rows = table ? table.getElementsByClassName('reclamation-row') : [];
    const noResults = document.querySelector('.no-results');

    function filterTable(searchTerm) {
        let hasVisibleRows = false;
        searchTerm = searchTerm.toLowerCase();

        Array.from(rows).forEach(row => {
            const id = row.cells[0].textContent.toLowerCase();
            const description = row.querySelector('.description-cell').textContent.toLowerCase();
            const status = row.querySelector('.status-badge').textContent.toLowerCase();
            const date = row.cells[3].textContent.toLowerCase();

            if (id.includes(searchTerm) || 
                description.includes(searchTerm) || 
                status.includes(searchTerm) || 
                date.includes(searchTerm)) {
                row.style.display = '';
                hasVisibleRows = true;
            } else {
                row.style.display = 'none';
            }
        });

        // Afficher ou masquer le message "Aucun résultat"
        if (noResults) {
            noResults.style.display = hasVisibleRows ? 'none' : 'block';
        }
    }

    if (searchInput) {
        searchInput.addEventListener('input', function(e) {
            filterTable(e.target.value);
        });

        // Ajout de l'effet de focus
        searchInput.addEventListener('focus', function() {
            this.parentElement.style.boxShadow = '0 0 0 0.2rem rgba(var(--text-purple-rgb), 0.25)';
        });

        searchInput.addEventListener('blur', function() {
            this.parentElement.style.boxShadow = 'none';
        });
    }
});
</script>
{% endblock %}