{% extends 'base.html.twig' %}

{% block title %}Événements{% endblock %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .events-container {
            padding: 2rem;
            background: linear-gradient(to bottom, #1a0d21, #2d1b36);
            min-height: 100vh;
        }

        .event-card {
            background: rgba(26, 13, 33, 0.9);
            border-radius: 15px;
            margin-bottom: 2rem;
            overflow: hidden;
            position: relative;
            transition: transform 0.3s ease, box-shadow 0.3s ease;
            border: 1px solid rgba(255, 255, 255, 0.1);
        }

        .event-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
        }

        .event-match {
            display: flex;
            align-items: center;
            justify-content: space-between;
            padding: 2rem;
            color: white;
        }

        .team {
            display: flex;
            align-items: center;
            gap: 1rem;
        }

        .team-logo {
            width: 80px;
            height: 80px;
            border-radius: 50%;
            overflow: hidden;
            background: rgba(255, 255, 255, 0.1);
        }

        .team-logo img {
            width: 100%;
            height: 100%;
            object-fit: cover;
        }

        .team-name {
            font-size: 1.5rem;
            font-weight: bold;
            color: white;
            text-transform: uppercase;
        }

        .match-info {
            text-align: center;
            padding: 0 2rem;
        }

        .match-time {
            font-size: 2.5rem;
            font-weight: bold;
            color: white;
            margin-bottom: 0.5rem;
        }

        .match-date {
            color: #a855f7;
            font-size: 1.1rem;
        }

        .match-group {
            background: linear-gradient(45deg, #4f46e5, #a855f7);
            color: white;
            padding: 0.5rem 1rem;
            border-radius: 5px;
            font-size: 0.9rem;
            margin-top: 1rem;
            display: inline-block;
        }

        .stream-icons {
            display: flex;
            gap: 1rem;
            margin-top: 1rem;
            justify-content: center;
        }

        .stream-icons i {
            color: white;
            font-size: 1.5rem;
        }

        .capacity-info {
            position: absolute;
            top: 1rem;
            right: 1rem;
            background: rgba(0, 0, 0, 0.5);
            padding: 0.5rem 1rem;
            border-radius: 5px;
            color: white;
        }

        .reserve-btn {
            position: absolute;
            bottom: 1rem;
            right: 1rem;
            background: linear-gradient(45deg, #4f46e5, #a855f7);
            color: white;
            border: none;
            padding: 0.75rem 1.5rem;
            border-radius: 5px;
            cursor: pointer;
            transition: transform 0.2s ease;
        }

        .reserve-btn:hover {
            transform: scale(1.05);
        }

        .section-title {
            color: white;
            font-size: 2rem;
            margin-bottom: 2rem;
            text-align: center;
            text-transform: uppercase;
            letter-spacing: 2px;
        }
    </style>
{% endblock %}

{% block body %}
    <div class="events-container">
        <h1 class="section-title">Événements à venir</h1>
        
        <div class="row">
            {% for evenement in evenements %}
                <div class="col-12 mb-4">
                    <div class="event-card">
                        <div class="event-match">
                            <div class="team">
                                <div class="team-logo">
                                    <img src="{{ asset('images/team-default.svg') }}" alt="Team 1">
                                </div>
                                <div class="team-info">
                                    <div class="team-name">{{ evenement.nom }}</div>
                                    <div class="match-group">GROUP {{ random(1, 5) }} | MATCH {{ random(1, 10) }}TH</div>
                                </div>
                            </div>
                            
                            <div class="match-info">
                                <div class="match-time">{{ evenement.date|date('H:i') }}</div>
                                <div class="match-date">{{ evenement.date|date('dS M Y') }}</div>
                                <div class="stream-icons">
                                    <i class="fab fa-youtube"></i>
                                    <i class="fab fa-twitch"></i>
                                </div>
                            </div>
                            
                            <div class="team">
                                <div class="team-info text-end">
                                    <div class="team-name">{{ evenement.localisation }}</div>
                                    <div class="match-group">VENUE</div>
                                </div>
                                <div class="team-logo">
                                    <img src="{{ asset('images/venue-default.svg') }}" alt="Venue">
                                </div>
                            </div>
                        </div>
                        
                        <div class="capacity-info">
                            Places disponibles: {{ evenement.capacite }}
                        </div>
                        
                        <button class="reserve-btn" onclick="window.location.href='{{ path('app_reservation_new', {'id': evenement.id}) }}'">
                            Réserver
                        </button>
                    </div>
                </div>
            {% else %}
                <div class="col-12 text-center">
                    <p class="text-white">Aucun événement trouvé</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}