{% if commentaires|length > 0 %}
    {% for commentaire in commentaires %}
        <div class="comment-card">
            <div class="comment-metadata">
                <div>
                    <div class="comment-author">{{ commentaire.auteur }}</div>
                    <div class="comment-id">ID: {{ commentaire.id }}</div>
                </div>
                <div>
                    <div class="comment-date">{{ commentaire.dateCreation ? commentaire.dateCreation|date('d/m/Y H:i') : 'N/A' }}</div>
                    <span class="badge {% if commentaire.signaled %}badge-warning{% else %}badge-success{% endif %}">
                        {% if commentaire.signaled %}⚠️ Signalé{% else %}✔️ Non signalé{% endif %}
                    </span>
                </div>
            </div>
            <div class="comment-content">
                {{ commentaire.contenu }}
            </div>
            <div class="comment-actions">
                <button class="btn btn-primary">Éditer</button>
                <button class="btn btn-danger">Supprimer</button>
            </div>
        </div>
    {% endfor %}

    <div class="pagination">
        <div class="page-item active"><a class="page-link" href="#">1</a></div>
        <div class="page-item"><a class="page-link" href="#">2</a></div>
        <div class="page-item"><a class="page-link" href="#">3</a></div>
        <div class="page-item"><a class="page-link" href="#">Suivant</a></div>
    </div>
{% else %}
    <div class="empty-state">
        <h3>Aucun commentaire trouvé</h3>
        <p>Il n'y a pas de commentaires disponibles actuellement.</p>
    </div>
{% endif %}