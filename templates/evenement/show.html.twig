{% extends 'baseBackOffice.html.twig' %}

{% block title %}Détails Événement{% endblock %}

{% block page_title %}Détails de l'événement{% endblock %}
{% block page_subtitle %}{{ evenement.nom }}{% endblock %}

{% block content %}
  <div class="row">
    <div class="col-lg-12">
      <div class="white_card mb_30">
        <div class="white_card_header">
          <div class="box_header m-0">
            <div class="main-title">
              <h3 class="m-0">Informations sur l'événement</h3>
            </div>
          </div>
        </div>
        <div class="white_card_body">
          <div class="table-responsive">
            <table class="table table-striped">
              <tbody>
              <tr>
                <th class="w-25">ID</th>
                <td>{{ evenement.id }}</td>
              </tr>
              <tr>
                <th>Nom</th>
                <td>{{ evenement.nom }}</td>
              </tr>
              <tr>
                <th>Date</th>
                <td>{{ evenement.date ? evenement.date|date('Y-m-d') : '' }}</td>
              </tr>
              <tr>
                <th>Localisation</th>
                <td>{{ evenement.localisation }}</td>
              </tr>
              <tr>
                <th>Capacité</th>
                <td>{{ evenement.capacite }}</td>
              </tr>
              </tbody>
            </table>
          </div>

          <div class="mt-4 d-flex">
            <a href="{{ path('app_evenement_index') }}" class="btn btn-secondary mr-3">
              <i class="ti-arrow-left mr-2"></i> Retour à la liste
            </a>
            <a href="{{ path('app_evenement_edit', {'id': evenement.id}) }}" class="btn btn-primary mr-3">
              <i class="ti-pencil mr-2"></i> Modifier
            </a>
            {{ include('evenement/_delete_form.html.twig') }}
          </div>
        </div>
      </div>
    </div>
  </div>
{% endblock %}
